
.swiper-item {
	width: 100%;
}
.swiper-item image {
	width: 100%;
}
.main {
	position: relative;
}
.map {
	background: #723473;
	color: white;
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	position: absolute;
	top: -60rpx;
	right: 40rpx;
}
._a {

	color: white;
	-webkit-align-self: center;
	    -ms-flex-item-align: center;
	        align-self: center;
	margin: auto;
}
._a,
._a:hover,
._a:active,
._a:visited,
._a:link,
._a:focus {
	-webkit-tap-highlight-color: rgba(0, 0, 0, 0);
	-webkit-tap-highlight-color: transparent;
	outline: none;
	background: none;
	text-decoration: none;
}
._h2,
._h4 {
	color: #723473;
}
._h4 {
	margin-bottom: 20rpx;
}
.text {
	padding: 40rpx 20rpx 20rpx 20rpx;
}
.text ._p {
	margin-bottom: 20rpx;
	text-indent: 2em;
}

